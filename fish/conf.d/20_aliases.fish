# fancy ls commands
# -l  long format
# -F  / after dirs, * after exe, @ after symlink
# -g suppress owner
# -o suppress group
# -h humanize sizes
# -q print nongraphic chars as question marks
alias ll="ls -lFhqa --color=auto"
alias ls="ls -Fh --color=auto"
alias la="ls -Fha --color=auto"
