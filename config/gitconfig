[color]
  ui = true

[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red 52
  newNormal = green
  newHighlight = green 22

[color "diff"]
  meta = yellow
  commit = green
  frag = magenta
  old = red
  new = green
  whitespace = red reverse

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = red
  untracked = cyan

[core]
  autocrlf = input
  safecrlf = true
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore-global

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -R
  show = diff-so-fancy | less --tabs=1,5 -R

[push]
  default = upstream

[alias]
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  unstage = reset HEAD --
  last = log -1 HEAD
  cara = commit --amend --reset-author
  email-guess = !bash $DOTFILES/scripts/git/email-guess
  unwip = reset HEAD~
  cleanup = !bash -c 'git gc --auto --aggressive && git remote prune origin'
  hide = update-index --skip-worktree
  unhide = update-index --no-skip-worktree
  hidden = "!git ls-files -v | grep ^[hsS] | cut -c 3-"
  better-push = !bash $DOTFILES/scripts/git/better-push

[commit]
  gpgsign = false
[gpg]
  program = gpg
